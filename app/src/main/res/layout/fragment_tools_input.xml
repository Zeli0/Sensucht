<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".ToolsInput" android:id="@+id/frameLayout4">
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="305dp"
            android:layout_height="56dp"
            android:id="@+id/textInputLayout2" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="204dp">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/addToolInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Skillet, Oven..."
        />
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView5"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textInputLayout2" app:layout_constraintTop_toTopOf="parent"
            android:textSize="20sp"/>
    <Button
            android:text="Add Tool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/addToolButt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout2" app:layout_constraintVertical_bias="0.389"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="156dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>